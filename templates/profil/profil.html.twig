{% extends 'layout.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}

{% block header %}
    {% include 'headers/headerConnect.html.twig' %}
{% endblock %}

{% block main %}
    <h2 id="h2Profil">Mon profil</h2>

    <div id="profil">
        <p>Pr√©nom : {{ user.prenom }}</p>
        <p>Nom : {{ user.nom }}</p>
