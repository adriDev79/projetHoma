{% extends 'layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/inscription.css') }}">
{% endblock %}

{% block header %}{% include 'headers/headerNoConnect.html.twig' %}{% endblock %}

{% block main %}
    {% for flashError in app.flashes() %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h2 id="h2Inscription">Inscription</h2>

    <div id="divInscription">
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, { label : 'Pseudo'}) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <div id="divBtnValidInscription">
            <button id="btnValidInscirption" class="btn btn-lg btn-primary" type="submit">
                Valider
            </button>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

{% block footer %}
    {% include 'footer/footer.html.twig' %}
{% endblock %}
